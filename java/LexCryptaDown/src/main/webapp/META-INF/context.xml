<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/lexcryptaupload">
    <Resource name="${jdbc.jndi}" auth="Container"
              factory="com.zaxxer.hikari.HikariJNDIFactory"
              type="javax.sql.DataSource"
              minimumIdle="${jdbc.pool.minimumIdle}" 
              maximumPoolSize="${jdbc.pool.maximumPoolSize}"
              connectionTimeout="${jdbc.pool.connectionTimeout}"
              autoCommit="false"
              dataSourceClassName="${jdbc.datasource.class}"
              dataSource.user="${jdbc.user}"
              dataSource.password="${jdbc.password}"
              dataSource.url="${jdbc.url}"/>
    
</Context>
